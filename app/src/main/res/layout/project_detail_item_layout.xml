<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_project_detail"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:scaleType="fitXY"
        android:src="@drawable/room_image"/>

    <ImageView
        android:id="@+id/iv_already_purchase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/already_purchased_icon"
        android:layout_alignRight="@+id/iv_project_detail"
        android:layout_alignEnd="@+id/iv_project_detail"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"/>

    <ImageView
        android:id="@+id/iv_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/like_icon"
        android:layout_alignRight="@+id/iv_project_detail"
        android:layout_alignEnd="@+id/iv_project_detail"
        android:layout_alignBottom="@+id/iv_project_detail"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"/>

</RelativeLayout>